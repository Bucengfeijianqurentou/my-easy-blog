<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gb.myeasyblog.mapper.PostMapper">

    <!-- 插入一篇新文章 -->
    <insert id="insert" parameterType="com.gb.myeasyblog.entity.Post">
        INSERT INTO post (title, content)
        VALUES (#{title}, #{content})
    </insert>

    <update id="update">
        UPDATE post
        SET title = #{title}, content = #{content}, updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    <delete id="deleteById">
        DELETE FROM post where id = #{id}
    </delete>

    <select id="selectAllPosts" resultType="com.gb.myeasyblog.entity.Post">
        SELECT id, title, content, created_at, updated_at
        FROM post
        ORDER BY created_at DESC
    </select>
    <select id="selectById" resultType="com.gb.myeasyblog.entity.Post">
        SELECT id, title, content, created_at, updated_at
        FROM post
        WHERE id = #{id}
    </select>

</mapper>